<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserController"
            fx:id="mainPane"
            prefWidth="900" prefHeight="650"
            style="-fx-background-color: #f5f5f5;">

    <!-- TOP NAVIGATION BAR -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <Label text="Room Reservation Dashboard"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Welcome, User!"
                       style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Navigation Toolbar -->
            <ToolBar style="-fx-background-color: #e3f2fd; -fx-padding: 10;">
                <Button text="Home" onAction="#showHome"
                        style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Button text="Reserve Room" onAction="#openReservationForm"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Button text="My Reservations" onAction="#showReservations"
                        style="-fx-background-color: #FF9800; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Separator orientation="VERTICAL"/>
                <Button text="Exit" onAction="#exitApp"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Auto-refresh: Every 30s"
                       style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </ToolBar>
        </VBox>
    </top>

    <!-- CENTER CONTENT -->
    <center>
        <SplitPane dividerPositions="0.6" style="-fx-padding: 10;">

            <!-- LEFT SIDE: Available Rooms Table -->
            <VBox spacing="10" style="-fx-padding: 10;">
                <HBox alignment="CENTER_LEFT" spacing="10"
                      style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1;">
                    <Label text="Available Rooms"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Refresh" onAction="#refreshRooms"
                            style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 12px;"/>
                </HBox>

                <TableView fx:id="roomTable" VBox.vgrow="ALWAYS"
                           style="-fx-background-color: white; -fx-border-color: #ddd; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="roomNameColumn" text="Room Name" prefWidth="250"/>
                        <TableColumn fx:id="roomStatusColumn" text="Status" prefWidth="150"/>
                    </columns>
                    <placeholder>
                        <Label text="No rooms available at the moment."
                               style="-fx-text-fill: #999; -fx-font-size: 14px;"/>
                    </placeholder>
                </TableView>

                <!-- Color Legend -->
                <HBox spacing="15" alignment="CENTER"
                      style="-fx-background-color: #fff3cd; -fx-padding: 10; -fx-border-color: #ffc107; -fx-border-width: 1;">
                    <Label text="Legend:"
                           style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="" style="-fx-background-color: #4CAF50; -fx-min-width: 15; -fx-min-height: 15;"/>
                        <Label text="Available" style="-fx-font-size: 11px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="" style="-fx-background-color: #f44336; -fx-min-width: 15; -fx-min-height: 15;"/>
                        <Label text="Reserved" style="-fx-font-size: 11px;"/>
                    </HBox>
                    <HBox spacing="5" alignment="CENTER">
                        <Label text="" style="-fx-background-color: #FFC107; -fx-min-width: 15; -fx-min-height: 15;"/>
                        <Label text="Pending" style="-fx-font-size: 11px;"/>
                    </HBox>
                </HBox>

                <Label text="Hover over a room to see details"
                       style="-fx-text-fill: #2196F3; -fx-font-size: 11px; -fx-font-style: italic;"/>
            </VBox>

            <!-- RIGHT SIDE: Booking Form -->
            <VBox spacing="15" style="-fx-padding: 10;">
                <HBox alignment="CENTER_LEFT"
                      style="-fx-background-color: white; -fx-padding: 10; -fx-border-color: #ddd; -fx-border-width: 1;">
                    <Label text="Booking Form"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                </HBox>

                <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 20; -fx-border-color: #ddd; -fx-border-width: 1;">

                    <VBox spacing="5">
                        <Label text="Room Name:"
                               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <TextField fx:id="bookingRoomField" promptText="Select a room from the table"
                                   editable="false"
                                   style="-fx-padding: 8; -fx-font-size: 13px; -fx-background-color: #f0f0f0;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Date:"
                               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <DatePicker fx:id="bookingDatePicker" promptText="Select date"
                                    prefWidth="280"
                                    style="-fx-padding: 8; -fx-font-size: 13px;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Time:"
                               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <TextField fx:id="bookingTimeField" promptText="e.g., 10:00 AM"
                                   style="-fx-padding: 8; -fx-font-size: 13px;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Customer Name:"
                               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <TextField fx:id="customerNameField" promptText="Enter your name"
                                   style="-fx-padding: 8; -fx-font-size: 13px;"/>
                    </VBox>

                    <VBox spacing="5">
                        <Label text="Additional Notes:"
                               style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                        <TextArea fx:id="notesField" promptText="Optional notes"
                                  prefRowCount="3"
                                  style="-fx-font-size: 13px;"/>
                    </VBox>

                    <HBox spacing="10" alignment="CENTER">
                        <Button fx:id="reserveButton" text="Reserve Room" onAction="#reserveRoom"
                                prefWidth="130" prefHeight="35"
                                style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                        <Button fx:id="cancelButton" text="Cancel Reservation" onAction="#cancelReservation"
                                prefWidth="150" prefHeight="35"
                                style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>
                    </HBox>

                    <Label text="Press Enter in any field to confirm booking"
                           style="-fx-text-fill: #666; -fx-font-size: 11px; -fx-font-style: italic; -fx-alignment: center;"/>
                </VBox>

                <!-- Preview Section -->
                <VBox spacing="5" style="-fx-background-color: #e8f5e9; -fx-padding: 10; -fx-border-color: #4CAF50; -fx-border-width: 1;">
                    <Label text="Booking Preview"
                           style="-fx-font-weight: bold; -fx-font-size: 12px;"/>
                    <Label fx:id="bookingPreviewLabel" text="No booking details yet"
                           wrapText="true"
                           style="-fx-font-style: italic; -fx-text-fill: #666; -fx-font-size: 11px;"/>
                </VBox>
            </VBox>

        </SplitPane>
    </center>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <VBox>
            <!-- My Reservations Section -->
            <VBox fx:id="myReservationsSection" spacing="10" visible="false" managed="false"
                  style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="My Reservations"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="Close" onAction="#closeMyReservations"
                            style="-fx-background-color: #999; -fx-text-fill: white; -fx-font-size: 11px;"/>
                </HBox>

                <TableView fx:id="myReservationsTable" prefHeight="150"
                           style="-fx-border-color: #ddd; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="myResRoomColumn" text="Room Name" prefWidth="200"/>
                        <TableColumn fx:id="myResDateColumn" text="Date" prefWidth="150"/>
                        <TableColumn fx:id="myResStatusColumn" text="Status" prefWidth="150"/>
                    </columns>
                    <placeholder>
                        <Label text="You have no reservations yet."
                               style="-fx-text-fill: #999;"/>
                    </placeholder>
                </TableView>
            </VBox>

            <!-- Status Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-background-color: #e0e0e0; -fx-padding: 10;">
                <Label text="Status:"/>
                <Label fx:id="statusLabel" text="Ready to make a reservation"
                       style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Room Reservation System v2.0"
                       style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>