<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserController"
            prefWidth="800" prefHeight="500">

    <top>
        <ToolBar>
            <Button text="Home" onAction="#showHome"/>
            <Button text="Reserve Room" onAction="#openReservationForm"/>
            <Button text="My Reservations" onAction="#showReservations"/>
            <Button text="Exit" onAction="#exitApp"/>
        </ToolBar>
    </top>

    <center>
        <TableView fx:id="roomTable" prefHeight="400" prefWidth="600"/>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="Welcome, User!" style="-fx-padding: 10;"/>
    </bottom>
</BorderPane>
