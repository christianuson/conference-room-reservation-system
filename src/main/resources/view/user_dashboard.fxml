<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.UserController"
            fx:id="mainPane"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #f5f5f5;">

    <!-- TOP NAVIGATION BAR -->
    <top>
        <VBox>
            <HBox alignment="CENTER" spacing="10"
                  style="-fx-background-color: #a51618; -fx-padding: 15;">
                <Label text="Conference Room Reservation Dashboard"
                       style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="welcomeLabel" text="Welcome, User!"
                       style="-fx-font-size: 14px; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>

            <!-- Navigation Toolbar -->
            <ToolBar style="-fx-background-color: #e3f2fd; -fx-padding: 10;">
                <Button text="Home" onAction="#showHome"
                        style="-fx-background-color: #af4c4c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Button text="My Reservations" onAction="#showReservations"
                        style="-fx-background-color: rgba(60,10,10,0.98); -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Separator orientation="VERTICAL"/>
                <Button text="Exit" onAction="#exitApp"
                        style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 8 15;"/>
                <Region HBox.hgrow="ALWAYS"/>

                <!-- Search Field -->
                <Label text="Search:" style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <TextField fx:id="searchField" promptText="Search rooms..."
                           prefWidth="250"
                           style="-fx-padding: 5; -fx-font-size: 13px;"/>

                <Separator orientation="VERTICAL"/>
                <Label text="Auto-refresh: Every 30s"
                       style="-fx-font-size: 11px; -fx-text-fill: #666;"/>
            </ToolBar>
        </VBox>
    </top>

    <!-- CENTER CONTENT: ROOM CARDS -->
    <center>
        <VBox spacing="15" style="-fx-padding: 20;">
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Available Conference Rooms"
                       style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸ”„ Refresh" onAction="#refreshRooms"
                        style="-fx-background-color: #ff296c; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 8 15;"/>
            </HBox>

            <!-- Instructions -->
            <HBox spacing="10" alignment="CENTER_LEFT"
                  style="-fx-background-color: #e3f2fd; -fx-padding: 10; -fx-border-color: #2196F3; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="ðŸ’¡ Tip: Double-click any room card to reserve it!"
                       style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #1976D2;"/>
            </HBox>

            <!-- Room Cards Container (ScrollPane) -->
            <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS"
                        style="-fx-background-color: transparent; -fx-background: transparent;">
                <FlowPane fx:id="roomCardsContainer"
                          hgap="20" vgap="20"
                          style="-fx-background-color: transparent;">
                    <padding>
                        <Insets/>
                    </padding>
                </FlowPane>
            </ScrollPane>

            <!-- Color Legend -->
            <HBox spacing="20" alignment="CENTER"
                  style="-fx-background-color: #fff3cd; -fx-padding: 12; -fx-border-color: #ffc107; -fx-border-width: 1; -fx-border-radius: 5; -fx-background-radius: 5;">
                <Label text="Legend:"
                       style="-fx-font-weight: bold; -fx-font-size: 13px;"/>
                <HBox spacing="8" alignment="CENTER">
                    <Label text="" style="-fx-background-color: #4CAF50; -fx-min-width: 20; -fx-min-height: 20; -fx-border-radius: 10; -fx-background-radius: 10;"/>
                    <Label text="Available" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="8" alignment="CENTER">
                    <Label text="" style="-fx-background-color: #f44336; -fx-min-width: 20; -fx-min-height: 20; -fx-border-radius: 10; -fx-background-radius: 10;"/>
                    <Label text="Reserved" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                </HBox>
                <HBox spacing="8" alignment="CENTER">
                    <Label text="" style="-fx-background-color: #FFC107; -fx-min-width: 20; -fx-min-height: 20; -fx-border-radius: 10; -fx-background-radius: 10;"/>
                    <Label text="Pending" style="-fx-font-size: 12px; -fx-font-weight: bold;"/>
                </HBox>
            </HBox>
        </VBox>
    </center>

    <!-- BOTTOM STATUS BAR -->
    <bottom>
        <VBox>
            <!-- My Reservations Section -->
            <VBox fx:id="myReservationsSection" spacing="10" visible="false" managed="false"
                  style="-fx-background-color: white; -fx-padding: 15; -fx-border-color: #ddd; -fx-border-width: 1 0 0 0;">
                <HBox alignment="CENTER_LEFT" spacing="10">
                    <Label text="ðŸ“‹ My Reservations"
                           style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="cancelButton" text="Cancel Selected" onAction="#cancelReservation"
                            style="-fx-background-color: #f44336; -fx-text-fill: white; -fx-font-size: 12px; -fx-font-weight: bold; -fx-padding: 6 12;"/>
                    <Button text="Close" onAction="#closeMyReservations"
                            style="-fx-background-color: #999; -fx-text-fill: white; -fx-font-size: 12px; -fx-padding: 6 12;"/>
                </HBox>

                <TableView fx:id="myReservationsTable" prefHeight="180"
                           style="-fx-border-color: #ddd; -fx-border-width: 1;">
                    <columns>
                        <TableColumn fx:id="myResRoomColumn" text="Room Name" prefWidth="300"/>
                        <TableColumn fx:id="myResDateColumn" text="Date and Time" prefWidth="250"/>
                        <TableColumn fx:id="myResStatusColumn" text="Status" prefWidth="150"/>
                    </columns>
                    <placeholder>
                        <Label text="You have no reservations yet. Double-click a room card to make one!"
                               style="-fx-text-fill: #999; -fx-font-size: 13px;"/>
                    </placeholder>
                </TableView>
            </VBox>

            <!-- Status Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10"
                  style="-fx-background-color: #e0e0e0; -fx-padding: 12;">
                <Label text="Status:"/>
                <Label fx:id="statusLabel" text="Ready to make a reservation"
                       style="-fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Label text="Room Reservation System v2.0 | SQLite Database"
                       style="-fx-text-fill: #666; -fx-font-size: 11px;"/>
            </HBox>
        </VBox>
    </bottom>

</BorderPane>
