<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="400" prefHeight="350">

    <children>

        <!-- LOGIN SECTION -->
        <VBox fx:id="loginPane" spacing="10" layoutX="80" layoutY="40">
            <Label text="Room Reservation Login"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <Label text="Email:"/>
                <TextField fx:id="emailField" prefWidth="200"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Password:"/>
                <PasswordField fx:id="passwordField" prefWidth="200"/>
            </HBox>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" prefWidth="120"/>
            <Label fx:id="statusLabel" textFill="gray"/>
            <Hyperlink text="Don't have an account? Sign up" onAction="#switchToRegister"/>
        </VBox>

        <!-- SIGNUP SECTION -->
        <VBox fx:id="registerPane" spacing="10" layoutX="80" layoutY="40" visible="false">
            <Label text="Create an Account"
                   style="-fx-font-size: 16px; -fx-font-weight: bold;" />
            <HBox spacing="10">
                <Label text="Username:"/>
                <TextField fx:id="usernameField" prefWidth="200"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Email:"/>
                <TextField fx:id="signupEmailField" prefWidth="200"/>
            </HBox>
            <HBox spacing="10">
                <Label text="Password:"/>
                <PasswordField fx:id="signupPasswordField" prefWidth="200"/>
            </HBox>

            <Button fx:id="registerButton" text="Sign Up" onAction="#handleRegister" prefWidth="120"/>
            <Label fx:id="registerStatusLabel" textFill="gray"/>
            <Hyperlink text="Already have an account? Login" onAction="#switchToLogin"/>
        </VBox>

    </children>
</AnchorPane>
