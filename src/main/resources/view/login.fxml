<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.LoginController"
            prefWidth="450" prefHeight="400"
            style="-fx-background-color: #f5f5f5;">

    <children>

        <!-- LOGIN SECTION -->
        <VBox fx:id="loginPane" spacing="15" layoutX="75" layoutY="50"
              style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="Room Reservation Login"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <VBox spacing="5">
                <Label text="Email:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="emailField" prefWidth="280"
                           promptText="Enter your email"
                           style="-fx-padding: 8; -fx-font-size: 13px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Password:" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="passwordField" prefWidth="280"
                               promptText="Enter your password"
                               style="-fx-padding: 8; -fx-font-size: 13px;"/>
            </VBox>

            <Button fx:id="loginButton" text="Login" onAction="#handleLogin"
                    prefWidth="280" prefHeight="35"
                    style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>

            <Label fx:id="statusLabel" textFill="gray" wrapText="true" prefWidth="280"
                   style="-fx-font-size: 12px;"/>

            <Hyperlink text="Don't have an account? Sign up" onAction="#switchToRegister"
                       style="-fx-font-size: 12px;"/>
        </VBox>

        <!-- SIGNUP SECTION -->
        <VBox fx:id="registerPane" spacing="15" layoutX="75" layoutY="40" visible="false"
              style="-fx-padding: 20; -fx-background-color: white; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 10, 0, 0, 2);">

            <Label text="Create an Account"
                   style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #333;" />

            <VBox spacing="5">
                <Label text="Username:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="usernameField" prefWidth="280"
                           promptText="Choose a username (min 3 chars)"
                           style="-fx-padding: 8; -fx-font-size: 13px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Email:" style="-fx-font-weight: bold;"/>
                <TextField fx:id="signupEmailField" prefWidth="280"
                           promptText="Enter your email"
                           style="-fx-padding: 8; -fx-font-size: 13px;"/>
            </VBox>

            <VBox spacing="5">
                <Label text="Password:" style="-fx-font-weight: bold;"/>
                <PasswordField fx:id="signupPasswordField" prefWidth="280"
                               promptText="Create a password (min 6 chars)"
                               style="-fx-padding: 8; -fx-font-size: 13px;"/>
            </VBox>

            <Button fx:id="registerButton" text="Sign Up" onAction="#handleRegister"
                    prefWidth="280" prefHeight="35"
                    style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 14px; -fx-font-weight: bold; -fx-background-radius: 5;"/>

            <Label fx:id="registerStatusLabel" textFill="gray" wrapText="true" prefWidth="280"
                   style="-fx-font-size: 12px;"/>

            <Hyperlink text="Already have an account? Login" onAction="#switchToLogin"
                       style="-fx-font-size: 12px;"/>
        </VBox>

    </children>
</AnchorPane>