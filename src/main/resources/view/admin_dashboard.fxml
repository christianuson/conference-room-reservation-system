<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.AdminController"
            prefWidth="800" prefHeight="500">

    <top>
        <Label text="Admin Dashboard"
               BorderPane.alignment="CENTER"
               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-padding: 10;"/>
    </top>

    <center>
        <SplitPane>
            <items>
                <VBox spacing="10" style="-fx-padding: 10;">
                    <Label text="Rooms"/>
                    <TableView fx:id="roomTable" prefHeight="200" prefWidth="350"/>
                    <HBox spacing="10">
                        <Button text="Add Room" onAction="#addRoom"/>
                        <Button text="Delete Room" onAction="#deleteRoom"/>
                    </HBox>
                </VBox>

                <VBox spacing="10" style="-fx-padding: 10;">
                    <Label text="Users"/>
                    <TableView fx:id="userTable" prefHeight="200" prefWidth="350"/>
                </VBox>
            </items>
        </SplitPane>
    </center>

    <bottom>
        <Label fx:id="statusLabel" text="Status: Ready" style="-fx-padding: 10;"/>
    </bottom>
</BorderPane>
