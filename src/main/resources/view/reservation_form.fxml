<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<GridPane xmlns:fx="http://javafx.com/fxml"
          fx:controller="controller.ReservationFormController"
          alignment="CENTER"
          hgap="10" vgap="10"
          style="-fx-padding: 20;">

    <Label text="Room Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="roomNameField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <Label text="Date:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <DatePicker fx:id="datePicker" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="Time:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="timeField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Label text="Customer Name:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <TextField fx:id="customerField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Button text="Reserve" fx:id="reserveButton" onAction="#handleReservation"
            GridPane.rowIndex="4" GridPane.columnIndex="1" GridPane.halignment="RIGHT"/>

    <Label fx:id="statusLabel" GridPane.rowIndex="5" GridPane.columnIndex="1" textFill="gray"/>
</GridPane>
